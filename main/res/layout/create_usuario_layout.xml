<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2136F3"
    android:hapticFeedbackEnabled="false"
    android:orientation="vertical"
    tools:context=".CreateUsuario">

    <ImageView
        android:layout_width="255dp"
        android:layout_height="217dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/duck" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Apps Login"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        android:drawableEnd="@drawable/person"
        android:hint="rafaelluz10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="@color/white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:drawableEnd="@drawable/mail"
        android:hint="rafael.luztp1@gmail.com"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColorHint="@color/white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:drawableEnd="@drawable/baseline_app_blocking_24"
        android:hint="******************"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="@color/white" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:drawableEnd="@drawable/baseline_app_blocking_24"
        android:hint="******************"
        android:inputType="numberPassword"
        android:padding="10dp"
        android:textColorHint="@color/white" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:text="SIGN IN"
        android:textSize="20dp"
        />


</LinearLayout>